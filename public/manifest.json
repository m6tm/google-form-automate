{
  "manifest_version": 3,
  "name": "Google Form Automate",
  "version": "1.0.0",
  "description": "Extension to automate Google Forms with React interface",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Google Form Automate"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/forms/*"],
      "js": ["content.js", "scripts/actions.js"]
    }
  ]
}
